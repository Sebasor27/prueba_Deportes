@model DeporteGest.Models.User

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
@if (!string.IsNullOrEmpty(Context.Session.GetString("Username")))
{
    <p>Ya has iniciado sesión. <a href="@Url.Action("Index", "Home")">Ir al inicio</a>.</p>
}
else
{
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="Email">Usuario:</label>
        <input type="text" class="form-control" asp-for="Username" required />
    </div>

    <div class="form-group">
        <label for="Password">Contraseña:</label>
        <input type="password" class="form-control" asp-for="PasswordHash" required />
    </div>

    <button type="submit" class="btn btn-primary">Ingresar</button>
   <div class="mt-3">
    <a href="@Url.Action("Create", "Users")" class="btn btn-secondary">Crear cuenta</a>
   </div>
</form>
}